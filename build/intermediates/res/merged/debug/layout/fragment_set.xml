<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e0e0e0"
    tools:context="com.cn.stepcounter.Fragment.SetFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="计步器灵敏度"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            />
    <io.techery.progresshint.addition.widget.SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center"
        app:popupStyle="follow"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="状态设置"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        />
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <RadioButton
            android:id="@+id/rb_run"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="跑步"
            android:textColor="@color/home_button_text_selector"
            android:checked="true"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/type_bg"
            />
        <RadioButton
            android:id="@+id/rb_jump"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="跳绳"
            android:textColor="@color/home_button_text_selector"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/type_bg"
            />
        <RadioButton
            android:id="@+id/rb_up"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="爬楼梯"
            android:textColor="@color/home_button_text_selector"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/type_bg"
            />
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:onClick="about"
        >
        <TextView
            android:id="@+id/tv_about"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/tv_about"
            android:src="@drawable/arrow_icon_xx"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/problem"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:onClick="fqa"
    >
    <TextView
        android:id="@+id/tv_problem"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="常见问题"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        />
<ImageView
    android:layout_width="30dp"
    android:layout_height="20dp"
    android:src="@drawable/arrow_icon_xx"
    android:layout_toRightOf="@+id/tv_problem"
    android:layout_marginTop="15dp"
    />
</RelativeLayout>


</LinearLayout>
