<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    tools:context="com.cn.stepcounter.Fragment.WeightFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <widget.CircleImageView2
                android:id="@+id/head_w"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:src="@drawable/head_me"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="60dp"
                >
                <TextView
                    android:id="@+id/sex_w"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="性别:女"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/wei_w"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="当前体重：60"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/hei_w"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="目标体重:55"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/time_w"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="所需时间:56"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_edit"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="编辑"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:textColor="#33B5E5"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="每日达标"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="跑步"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="跳绳"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="爬楼梯"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="热量/卡"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/tv_run"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="34256"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_jump"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="34256"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tv_up"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="34256"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/cal_w"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="34256"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="完成进度/日"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
            <TextView
                android:id="@+id/tv_fin_w"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="步数完成"
                android:gravity="center"
                android:textColor="@color/black"
                />
           <!-- <ProgressBar
                android:id="@+id/pro_fin_w"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toRightOf="@id/tv_fin_w"
                style="?android:progressBarStyleHorizontal"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp"
                android:background="#e0f2f1"
                />-->
            <widget.ProgressView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/pro_fin_w"
                android:layout_toRightOf="@+id/tv_fin_w"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <TextView
                android:id="@+id/tv_fin_cal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="热量完成"
                android:gravity="center"
                android:textColor="@color/black"
                />
         <!--   <ProgressBar
                android:id="@+id/pro_fin_cal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toRightOf="@+id/tv_fin_cal"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp"
                style="?android:progressBarStyleHorizontal"
                />-->
            <widget.ProgressView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/pro_fin_cal"
                android:layout_toRightOf="@+id/tv_fin_cal"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="完成进度/总"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/tv_t_w"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="体重完成"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                />
            <widget.ProgressView
                android:id="@+id/pro_t_w"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/tv_t_w"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/tv_t_c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="热量完成"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                />
            <widget.ProgressView
                android:id="@+id/pro_t_c"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/tv_t_c"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"
                />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
